{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".int-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@app/core(|/.*)$": "<rootDir>/../../../../libs/core/src/$1"
  },
  "transformIgnorePatterns": ["node_modules/(?!.*\\.(js|ts)$)"],
  "testTimeout": 60000
}
